<rule-template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../schema/RuleTemplate.xsd">
  
  <rule node-name="hmlid" 
    miring-rule-id="1.1.a" 
    severity="miring" />  
    
  <rule node-name="reporting-center" 
    miring-rule-id="1.2.a" 
    severity="miring" /> 

  <rule node-name="raw-reads" 
    miring-rule-id="1.5.a" 
    severity="miring" 
    solution-text="Every sbt-ngs node must have at least one child raw-reads node." />
    
  <rule node-name="allele-assignment" 
    miring-rule-id="2.1.a" 
    severity="warning" 
    solution-text="Every typing node must have at least one child allele-assignment node." />
    
  <rule node-name="glstring" 
    miring-rule-id="3.1.a" 
    severity="warning" 
    solution-text="A glstring node is expected as a child of an allele-assignment node. Please verify that the locus of the allele-assignment is specified either in a glstring, or as a locus attribute in a sbt-ngs node." />

  <rule node-name="variant-effect" 
    miring-rule-id="5.1.a" 
    severity="warning" 
    solution-text="You can use variant-effect nodes to specify the type of variant specified.  They should have a term attribute, containing a SO (Sequence Ontology) variant effect term." />
    
    <rule node-name="hmlid"
    miring-rule-id="1.1.a"
    severity="miring" />
    
    <rule node-name="schemas.nmdp.org/spec/hml/1.0:reporting-center"
    miring-rule-id="1.2.a"
    severity="miring" />
    
    <rule node-name="schemas.nmdp.org/spec/hml/1.0:raw-reads"
    miring-rule-id="1.5.a"
    severity="miring"
    solution-text="Every sbt-ngs node must have at least one child raw-reads node." />
    
    <rule node-name="schemas.nmdp.org/spec/hml/1.0:allele-assignment"
    miring-rule-id="2.1.a"
    severity="warning"
    solution-text="Every typing node must have at least one child allele-assignment node." />
    
    <rule node-name="schemas.nmdp.org/spec/hml/1.0:glstring"
    miring-rule-id="3.1.a"
    severity="warning"
    solution-text="A glstring node is expected as a child of an allele-assignment node. Please verify that the locus of the allele-assignment is specified either in a glstring, or as a locus attribute in a sbt-ngs node." />
    
    <rule node-name="schemas.nmdp.org/spec/hml/1.0:variant-effect"
    miring-rule-id="5.1.a"
    severity="warning"
    solution-text="You can use variant-effect nodes to specify the type of variant specified.  They should have a term attribute, containing a SO (Sequence Ontology) variant effect term." />
  <hml-rule node-name="documentation"
    severity="hml" />
  <hml-rule node-name="hlmid"
    severity="hml" />

  <hml-rule node-name="reporting-center"
    severity="hml" />

  <hml-rule node-name="typing-test-name"
    severity="warning" />

  <hml-rule node-name="property"
    severity="hml" />

  <hml-rule node-name="sample"
    severity="hml" />
<hml-rule node-name="sequence"
severity="hml" />

<hml-rule node-name="typing"
severity="hml" />
<hml-rule node-name="allele-assignment"
severity="hml" />
<hml-rule node-name="haploid"
severity="hml" />
<hml-rule node-name="glstring"
severity="hml" />
<hml-rule node-name="sso"
