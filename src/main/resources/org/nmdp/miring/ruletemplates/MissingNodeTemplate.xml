<hml-rule node-name="sbt-sanger"
severity="hml" />
<hml-rule node-name="amplification"
severity="hml" />
<hml-rule node-name="sub-amplification"
severity="hml" />
<hml-rule node-name="gssp"
severity="hml" />
<hml-rule node-name="sbt-ngs"
severity="hml" />
<hml-rule node-name="consenses-sequence"
severity="hml" />
<hml-rule node-name="consenses-sequence-block"
severity="hml" />
<hml-rule node-name="sequence-quality"
severity="hml" />
